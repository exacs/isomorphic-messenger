{
  "name": "isomorphic-messenger",
  "version": "1.7.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "npm run clean-server && npm run clean-client",
    "build": "npm run build-server && npm run build-client",
    "test": "NODE_PATH=$NODE_PATH:app API_ROOT='http://example.com' npm run test-all",
    "test-all": "PORT=80 API_HOST='http://example.com' nyc --require babel-register mocha --recursive test-server/ test-app/",
    "test-server": "NODE_PATH=$NODE_PATH:app nyc --require babel-register mocha --recursive test-server/",
    "test-app": "NODE_PATH=$NODE_PATH:app PORT=80 API_HOST='http://example.com'  nyc --require babel-register mocha --recursive test-app/",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean-server": "rm index.js",
    "clean-client": "rm public/bundle.js",
    "build-server": "NODE_ENV=production webpack --progress --color --bail --config webpack.config.server.js",
    "build-client": "NODE_ENV=production webpack --config webpack.config.client.js --progress --color -p --bail",
    "postinstall": "npm run build",
    "start": "API_HOST='http://localhost' node .",
    "start-dev": "PORT=4000 API_HOST='http://localhost' node index-dev.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.9",
    "deep-freeze": "0.0.1",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "mocha": "^2.5.3",
    "nock": "^8.0.0",
    "nyc": "^6.6.1",
    "proxyquire": "^1.7.10",
    "redux-mock-store": "^1.1.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "sinon": "^1.17.4",
    "supertest": "^1.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.1"
  },
  "dependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
