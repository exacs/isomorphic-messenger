{
  "name": "isomorphic-messenger",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "npm run clean-server && npm run clean-client",
    "build": "npm run build-server && npm run build-client",
    "test": "npm run build && npm run test-eslint && npm run test-server",
    "test-eslint": "eslint app && eslint client && eslint server",
    "test-server": "mocha --compilers js:babel-register --recursive server/test",
    "clean-server": "rm index.js",
    "clean-client": "rm public/bundle.js",
    "build-server": "webpack --progress --color --config webpack.config.server.js",
    "build-client": "NODE_ENV=production webpack --config webpack.config.client.js --progress --color -p",
    "postinstall": "npm run build",
    "start": "node .",
    "start-dev": "webpack-dev-server --config webpack.config.client-dev.js --content-base dev-static/ --inline --hot"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "mocha": "^2.5.3",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  }
}
