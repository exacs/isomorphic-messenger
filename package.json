    "babel-preset-react": "^6.11.1",
    "body-parser": "^1.15.2",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "moment": "^2.14.1",
    "node-sass": "^3.8.0",
    "pg": "^6.0.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
